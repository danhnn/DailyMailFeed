<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/blog2"
        android:id="@+id/ivShared"
        android:transitionName="@string/transition_detail_name"
        android:layout_marginBottom="@dimen/fragment_detail_vertical_margin_bottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="This is the title!"
        android:id="@+id/tvTitle"
        android:layout_marginBottom="@dimen/fragment_detail_vertical_margin_bottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard."
        android:id="@+id/tvDescription"
        android:layout_marginBottom="@dimen/fragment_detail_vertical_margin_bottom"
        />

</LinearLayout>
